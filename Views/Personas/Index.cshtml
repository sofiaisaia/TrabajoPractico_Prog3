@model IEnumerable<CrudMVCApp.Models.Persona> // El modelo de la vista es una colección de objetos Persona

@{
    ViewData["Title"] = "ABM de Clientes"; // Título de la página
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="titleindex">ABM de Clientes</h1>
<p>
    <!-- Enlace para crear un nuevo registro de Persona con ícono -->
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="bi bi-person-add"></i> Nuevo cliente
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- Encabezados de las columnas, usando los nombres de las propiedades del modelo -->
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cuit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                Deporte
            </th>
            <th></th> <!-- Columna para las acciones (Editar, Detalles, Eliminar) -->
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) { // Itera sobre cada Persona en el modelo
        <tr class="persona-row">
            <!-- Muestra los valores de cada propiedad de la Persona -->
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @{
                    var deportes = new List<string>();
                    if (item.Futbol) { deportes.Add("Fútbol"); }
                    if (item.Basquet) { deportes.Add("Básquet"); }
                    if (item.Otros) { deportes.Add("Otros"); }
                }
                @string.Join(", ", deportes)
            </td>
            <td>
                <!-- Enlaces para editar, ver detalles o eliminar la Persona actual -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar <i class="bi bi-pen icon-animado"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Detalles <i class="bi bi-info-circle icon-animado"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar <i class="bi bi-trash icon-spin"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
